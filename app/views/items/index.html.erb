<h1>Listing Items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Callnumber</th>
    <th>Volume</th>
    <th>Comments</th>
    <th>Numofsearch</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.author %></td>
    <td><%= item.callnumber %></td>
    <td><%= item.volume %></td>
    <td><%= item.comments %></td>
    <td><%= item.numofsearch %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

